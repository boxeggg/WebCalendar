@model Kalendarzyk.Models.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>EventModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" id="create-event">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EventModel.Name" class="control-label"></label>
                <input asp-for="EventModel.Name" class="form-control" />
                <span asp-validation-for="EventModel.Name" class="text-danger"></span>
            </div>
         

            <div class="form-group">
                <label asp-for="EventModel.Description" class="control-label"></label>
                <input asp-for="EventModel.Description" class="form-control" />
                <span asp-validation-for="EventModel.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventModel.StartTime" class="control-label"></label>
                <input asp-for="EventModel.StartTime" class="form-control" type="datetime-local" />
                       
                <span asp-validation-for="EventModel.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventModel.EndTime" class="control-label"></label>
                <input asp-for="EventModel.EndTime" class="form-control" type="datetime-local"
                        />
                <span asp-validation-for="EventModel.EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventModel.LocationId" class="control-label">Lokalizacja</label>
                <select asp-for="EventModel.LocationId" asp-items="Model.Location" class="form-control">
                    <option value="">Wybierz lokalizację</option>
                </select>
                <span asp-validation-for="EventModel.LocationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="EventModel.UserId"  />
            
            @if (ViewData["ModelErrors"] != null)
            {
                <div class="alert alert-danger">
                    @Html.Raw(ViewData["ModelErrors"])
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
